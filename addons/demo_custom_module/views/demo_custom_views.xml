<odoo>
    <record id="view_demo_custom_list" model="ir.ui.view">
        <field name="name">demo.custom.list</field>
        <field name="model">demo.custom</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_demo_custom_form" model="ir.ui.view">
        <field name="name">demo.custom.form</field>
        <field name="model">demo.custom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_demo_custom" model="ir.actions.act_window">
        <field name="name">Custom Records</field>
        <field name="res_model">demo.custom</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
