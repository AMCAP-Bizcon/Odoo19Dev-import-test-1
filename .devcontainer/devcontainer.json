{
  "name": "Odoo 19 Dev (Codespaces)",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "odoo",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "overrideCommand": false,

  // Start only these compose services
  "runServices": ["db", "odoo"],

  // Root user for consistent file permissions
  "remoteUser": "root",

  // Disable random port forwarding
  "remoteEnv": {
    "PORT_AUTO_FORWARDING": "off",
    "TZ": "Asia/Kolkata"
  },

  // Explicitly forward only Odooâ€™s web port
  "forwardPorts": [8069],
  "portsAttributes": {
    "8069": {
      "label": "Odoo 19",
      "onAutoForward": "openBrowser"
    }
  },

  // Devcontainer features
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },

  // Recommended VS Code setup
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-xml",
        "dbaeumer.vscode-eslint",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "python.analysis.typeCheckingMode": "basic",
        "python.formatting.provider": "black"
      }
    }
  },

  // Post-create steps
  "postCreateCommand": "mkdir -p addons && chown -R root:root /workspaces && odoo --version",

  // Stop services cleanly when Codespace stops
  "shutdownAction": "stopCompose",

  // Host requirements (Codespaces resources)
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "16gb"
  }
}
